DECLARE total_rows numbe (2) ;
    -> BEGIN
    -> UPDATE customers
    -> SET Salary = Salary + 5000 ;
    -> IF sql%notfound
    -> then dbms_output.put_line('no customers selected');
    -> elseif sql%found
    -> then total_rows := sql%rowcount;
    -> dbms_output.put_line(total_rows || 'customers selected');
    -> end if;
    -> end;
    -> $$
